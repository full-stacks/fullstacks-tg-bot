{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": ["ES2020.String"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./@types/",
      "./node_modules/@types/"
    ]
  },
  "include": [
    "./src",
    "./@types"
  ]
}
