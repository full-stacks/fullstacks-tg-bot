{
  "name": "guardian-bot",
  "version": "0.1.1",
  "description": "Telegram bot to manage developer groups",
  "main": "dist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/full-stacks/guardian-bot"
  },
  "bugs": {
    "url": "https://github.com/full-stacks/guardian-bot/issues"
  },
  "homepage": "https://github.com/full-stacks/guardian-bot/",
  "keywords": [
    "telegram",
    "bot",
    "fullstacks"
  ],
  "author": "frontendmonster <frontendmonster@gmail.com>",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=12",
    "yarn": ">=1"
  },
  "scripts": {
    "commit": "git-cz",
    "clean": "shx rm -rf dist",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "yarn run lint --fix",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "postbuild": "shx cp -r src/assets/ dist/",
    "dev": "dotenv -- ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "start": "dotenv node ."
  },
  "dependencies": {
    "@frontendmonster/utils": "0.3.11",
    "dedent": "0.7.0",
    "dotenv-cli": "3.2.0",
    "express": "4.17.1",
    "highlight.js": "9.18.1",
    "micro-bot": "2.5.3",
    "nedb-promises": "4.0.4",
    "prettier": "2.1.1",
    "puppeteer-core": "2.1.1",
    "ramda": "0.27.1",
    "tall": "3.1.0",
    "telegraf-ts": "3.88.6"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@frontendmonster/eslint-config": "^4.0.4",
    "@types/dedent": "0.7.0",
    "@types/express": "^4.17.7",
    "@types/highlight.js": "^9.12.4",
    "@types/node": "^14.6.2",
    "@types/prettier": "^2.1.0",
    "@types/puppeteer-core": "2.0.0",
    "@types/ramda": "^0.27.14",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.7.0",
    "husky": "4.2.5",
    "lint-staged": "^10.2.13",
    "shx": "0.3.2",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
